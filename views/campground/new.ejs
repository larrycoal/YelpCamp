<% include ../partials/header.ejs%>

<div class="container form">
        <h1>Add a new campground</h1>
    <div class="form-group">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" name="campground[name]" placeholder="campground name" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="number" name="campground[price]"  placeholder="price" class="form-control"min='1.00' step="0.1" required>
                </div>
            <div class="form-group">
                <input type="text" name="campground[desc]"  placeholder="description"class="form-control"required>
                </div>
                <div class="form-inline">
                    <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*" class="pl-2"required>
                </div>
            <div class="form-group pt-2">
            <input type="submit" class="btn btn-primary form-control">
        </div>
        </form>

    </div>
</div>


